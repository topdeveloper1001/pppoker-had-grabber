        TargetType="{x:Type ToolTip}">
        <Style.Resources>
            <Style
                TargetType="ContentPresenter">
                <Style.Resources>
                    <Style
                        TargetType="TextBlock">
                        <Setter
                            Property="TextWrapping"
                            Value="Wrap" />
                    </Style>
                </Style.Resources>
            </Style>
        </Style.Resources>
        <Setter
            Property="Foreground"
            Value="{StaticResource TextForegroundBrush}" />
        <Setter
            Property="Background"
