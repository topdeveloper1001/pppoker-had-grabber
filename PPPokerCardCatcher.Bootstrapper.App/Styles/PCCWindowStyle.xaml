            Property="CanResize"
            Value="False" />
        <Setter
            Property="CanMaximize"
            Value="False" />
        <Setter
            Property="CanMinimize"
            Value="False" />
        <Setter
            Property="CanClose"
            Value="False" />
        <Setter
            Property="MaxWidth"
            Value="550" />
        <Setter
            Property="MinWidth"
            Value="300" />
        <Setter
            Property="ShowInTaskbar"
            Value="False" />
        <Setter
            Property="TextOptions.TextFormattingMode"
            Value="Display" />
